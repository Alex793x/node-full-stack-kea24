{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "rootDir": ".",                                 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "*.ts", 
    "public/**/*.ts", 
    "config/**/*.ts", 
    "modules/**/*.ts", "config/serverConfig.ts",
    "public/pages/**/*.html", 
    "public/components/**/*.{ts,html}", 
    "public/assets/**/*.{ts,json,svg}", 
    "styles/**/*.css", 
  ],
}